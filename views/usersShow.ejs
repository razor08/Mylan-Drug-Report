<% include partials/header %>
<style>
    i.icon-green {
        color: green;
    }
</style>
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary card-header-icon">
            <div class="card-icon">
                <i class="material-icons">accessibility_new</i>
            </div>
            <h4 class="card-title">Users</h4>
        </div>
        <div class="card-body">
            <div class="toolbar">
                <!--        Here you can write extra buttons/actions for the toolbar              -->

            </div>
            <div class="material-datatables">
                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>UID</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Date Created</th>
                        <th class="disabled-sorting text-right">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    <% if (users) { users.forEach(function(x){  %>
                        <tr>
                            <td><%= x.name %></td>
                            <td><% if (x.isAdmin == true)  { %>
                                    <button class="ui green button">Admin</button>
                                <% } else { %>
                                    <button class="ui red button">User</button>
                                <% } %></td>
                            <td><%= x.uid %></td>
                            <td><%=x.email %></td>
                            <td><%= x.phone %></td>
                            <td><div class="ui compact menu">
                                    <div class="item">
                                        <i class="icon time"></i> <%= moment(x.dateCreated).format('ll') %>
                                    </div>
                                </div></td>
                            <td class="text-right">
                                <% if (x.isAdmin == true) { %>
                                    <a href="/users/<%= x.uid %>/user" ><button class="ui red button">Remove as Admin</button></a>
                                <% } else { %>
                                    <a href="/users/<%= x.uid %>/admin" ><button class="ui green button">Make Admin</button></a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) }%>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end content-->
    </div>
    <!--  end card  -->
</div>
<script>
    $('#usersMenu').addClass("active");
</script>
<% include partials/footer %>