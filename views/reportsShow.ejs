<% include partials/header %>
<style>
    i.icon-green {
        color: green;
    }
</style>
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary card-header-icon">
            <div class="card-icon">
                <i class="material-icons">accessibility_new</i>
            </div>
            <h4 class="card-title">Reports</h4>
        </div>
        <div class="card-body">
            <div class="toolbar">
                <!--        Here you can write extra buttons/actions for the toolbar              -->

            </div>
            <div class="material-datatables">
                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age/DOB</th>
                        <th>RID</th>
                        <th>Outcomes</th>
                        <th>Phone</th>
                        <th>Date Created</th>
                        <th class="disabled-sorting text-right">Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    <% if (reports) { reports.forEach(function(x){  %>
                        <tr>
                            <td><%= x.fname %></td>
                            <td><%= x.adob %></td>
                            <td><%= x.rid %></td>
                            <td><%= x.outcomes %></td>
                            <td><%= x.phone %></td>
                            <td><div class="ui compact menu">
                                    <div class="item">
                                        <i class="icon time"></i> <%= moment(x.dateCreated).format('ll') %>
                                    </div>
                                </div></td>
                            <td class="text-right">

                                    <a href="/reports/<%= x.rid %>/show" ><button class="ui green button">View</button></a>

                            </td>
                        </tr>
                    <% }) }%>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end content-->
    </div>
    <!--  end card  -->
</div>
<script>
    $('#reportsMenu').addClass("active");
</script>
<% include partials/footer %>